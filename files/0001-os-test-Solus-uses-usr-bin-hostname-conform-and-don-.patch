Subject: [PATCH 1/1] os-test: Solus uses /usr/bin/hostname, conform and don't
 fail

---
 src/os/os_test.go | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/os/os_test.go b/src/os/os_test.go
index a32e5fc..63016af 100644
--- a/src/os/os_test.go
+++ b/src/os/os_test.go
@@ -1692,7 +1692,7 @@ func runBinHostname(t *testing.T) string {
 		t.Fatal(err)
 	}
 	defer r.Close()
-	const path = "/bin/hostname"
+	const path = "/usr/bin/hostname"
 	argv := []string{"hostname"}
 	if runtime.GOOS == "aix" {
 		argv = []string{"hostname", "-s"}
@@ -1721,7 +1721,7 @@ func runBinHostname(t *testing.T) string {
 		output = output[0 : n-1]
 	}
 	if output == "" {
-		t.Fatalf("/bin/hostname produced no output")
+		t.Fatalf("/usr/bin/hostname produced no output")
 	}
 
 	return output
