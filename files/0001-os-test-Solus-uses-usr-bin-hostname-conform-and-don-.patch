Subject: [PATCH 1/1] os-test: Solus uses /usr/bin/hostname, conform and don't
 fail

---
 src/os/os_test.go | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/os/os_test.go b/src/os/os_test.go
index 9c4d5dada9..04289c2445 100644
--- a/src/os/os_test.go
+++ b/src/os/os_test.go
@@ -1456,7 +1456,7 @@ func runBinHostname(t *testing.T) string {
 		t.Fatal(err)
 	}
 	defer r.Close()
-	const path = "/bin/hostname"
+	const path = "/usr/bin/hostname"
 	argv := []string{"hostname"}
 	if runtime.GOOS == "aix" {
 		argv = []string{"hostname", "-s"}
@@ -1485,7 +1485,7 @@ func runBinHostname(t *testing.T) string {
 		output = output[0 : n-1]
 	}
 	if output == "" {
-		t.Fatalf("/bin/hostname produced no output")
+		t.Fatalf("/usr/bin/hostname produced no output")
 	}
 
 	return output
